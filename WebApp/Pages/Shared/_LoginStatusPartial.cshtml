@if (User == null || User.Identity == null || User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Account/Logout">
        Welcome @User?.Identity?.Name (@User?.Claims.FirstOrDefault(c => c.Type == "Position")?.Value) (@User?.Claims.FirstOrDefault(c => c.Type == "Department")?.Value, @User?.Claims.FirstOrDefault(c => c.Type == "CompanyCode")?.Value)
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Account/Login">Login</a>
}
